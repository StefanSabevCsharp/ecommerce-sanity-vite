{
  "version": 2,
  "builds": [
    { "src": "ecommerce-sanity-server/src/index.js", "use": "@vercel/node" },
    { "src": "dist/**/*", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "ecommerce-sanity-server/src/index.js" },
    { "src": "/(.*)", "dest": "dist/$1" }
  ]
}